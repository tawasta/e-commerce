<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="webmaster_settings" position="after">
                <h2>Website sale</h2>
                <div class="row mt16 o_settings_container" id="website_sale_maintenance">
                    <div class="col-12 col-lg-6 o_setting_box" id="website_sale_maintenance_setting">
                        <div class="o_setting_left_pane">
                            <field name="website_sale_maintenance_mode"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="website_sale_maintenance_mode"/>
                            <div class="text-muted">
                                Maintenance mode
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="mt8">
                                <field name="website_sale_maintenance_text"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
