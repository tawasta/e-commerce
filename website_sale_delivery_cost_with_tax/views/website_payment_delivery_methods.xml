<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="payment_delivery_methods"
        name="Delivery methods with tax"
        inherit_id="website_sale_delivery.payment_delivery_methods">

        <!-- Show tax excluded -->
        <xpath expr="//span[@t-att-class='badge_class']/t" position="attributes">
            <attribute
                name='t-if'>request.env.user.has_group('account.group_show_line_subtotals_tax_excluded')</attribute>
        </xpath>

        <!-- Show tax included -->
        <xpath expr="//span[@t-att-class='badge_class']/t" position="after">
            <t t-else="">
                <t
                    t-esc="delivery.rate_shipment(website_sale_order)['price'] if delivery.free_over else delivery.fixed_price_with_tax"
                    t-options='{"widget": "monetary", "from_currency": delivery.product_id.company_id.currency_id,
                           "display_currency": website_sale_order.currency_id}'
                />
            </t>
        </xpath>
    </template>
</odoo>
