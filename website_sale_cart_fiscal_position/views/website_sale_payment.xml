<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="payment"
        name="Payment: show fiscal position"
        inherit_id="website_sale.payment"
    >
        <xpath expr="//div[@id='oe_structure_website_sale_payment_1']" position="before">
            <div id="fiscal_position" class="card">
                <div class="card-body">
                    <strong>Fiscal position:</strong>
                    <span t-field="website_sale_order.fiscal_position_id" />
                </div>
            </div>
        </xpath>

    </template>
</odoo>
