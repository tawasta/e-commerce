<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="variants" inherit_id="sale.variants">
        <!-- Replace select-element price -->
        <xpath
            expr='//select//span[@t-if="combination_info_variant[&apos;price_extra&apos;]"]'
            position="attributes">
            <attribute
                name="t-if">combination_info_variant['price_extra'] and website.website_show_price</attribute>
        </xpath>
        <!-- Replace radiobutton-element price -->
        <xpath
            expr='//li[@class="form-group js_attribute_value"]//span[@t-if="combination_info_variant[&apos;price_extra&apos;]"]'
            position="attributes">
            <attribute
                name="t-if">combination_info_variant['price_extra'] and website.website_show_price</attribute>
        </xpath>
    </template>
</odoo>
