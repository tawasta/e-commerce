<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.extra.step</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block id="website_info_settings" position="inside">
                <setting>
                    <div class="content-group">
                        <div class="row mt8">
                            <label
                                class="col-lg-3"
                                string="Website sale extra step: info text"
                                for="website_sale_extra_step_text"
                            />
                            <field name="website_sale_extra_step_text" />
                            <p class="text-muted mt-2">
                                If set, this text will always be shown in the Extra Info phase of the cart flow. Note: pay attention to not leave any HTML remnants in the field when editing/translating it.
                            </p>
                        </div>
                    </div>
                </setting>
            </block>
        </field>
    </record>
</odoo>
