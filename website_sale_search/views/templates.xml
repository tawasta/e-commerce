<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="products_categories" inherit_id="website_sale.products_categories">
        <xpath expr="//li[contains(@class, 'nav-item')]" position="replace">
            <li class="nav-item">
                <a href="/shop" t-attf-class="nav-link#{'' if category else ' active'} o_not_editable">All Products</a>
            </li>
        </xpath>
    </template>

    <template id="search" inherit_id="website_sale.search">
        <xpath expr="//form" position="replace">
             <form t-attf-action="/shop" method="get" t-att-class="_classes">
                <t t-if="attrib_values">
                    <t t-foreach="attrib_values" t-as="a">
                        <input type="hidden" name="attrib" t-att-value="'%s-%s' % (a[0], a[1])" />
                    </t>
                </t>
                <t t-call="website.website_search_box" />
            </form>
        </xpath>
    </template>
</odoo>
