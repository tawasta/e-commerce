<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="confirmation" inherit_id="website_sale.confirmation">
        <xpath
            expr="//t[@t-if='same_shipping and not only_services']/.."
            position="attributes"
        >
            <attribute name="t-if">1 == 0</attribute>
        </xpath>

        <xpath
            expr="//t[@t-if='same_shipping and not only_services']/.."
            position="before"
        >
            <b>Address <t
                    t-if="same_shipping and not only_services"
                > &amp; Shipping</t>: </b>
        </xpath>
    </template>
</odoo>
