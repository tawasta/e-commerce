<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="product_variant_default_code" inherit_id="website_sale.product">
        <xpath expr="//h1[@t-field='product.name']" position="after">
            <h4>Product Code:
                <t t-if="len(product.product_variant_ids) &gt; 1"><span
                        class="product-variant-default-code"
                    /></t>
                <t t-if="not len(product.product_variant_ids) &gt; 1"><span
                        t-esc="product.default_code"
                    /></t>
            </h4>
        </xpath>
        <xpath expr="//input[@name='product_id']" position="attributes">
            <attribute name="id">product_id-id</attribute>
        </xpath>
    </template>
</odoo>
