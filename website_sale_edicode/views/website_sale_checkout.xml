<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="address"
        inherit_id="website_sale.address_b2b"
        name="Show Edicode field"
        customize_show="True"
        active="True"
    >
        <xpath expr="//div[contains(@t-attf-class, 'div_vat')]" position="after">
            <div
                id="edicode-div"
                style="display: none;"
                t-attf-class="form-group #{error.get('edicode') and 'has-error' or ''} col-md-6 div_edicode show-company"
            >
                <label
                    class="col-form-label label-optional"
                    for="edicode"
                >Edicode</label>
                <input
                    type="text"
                    name="edicode"
                    class="form-control"
                    t-att-value="'edicode' in checkout and checkout['edicode']"
                />
            </div>
            <div
                id="einvoice-operator-div"
                style="display: none;"
                t-attf-class="form-group #{error.get('einvoice_operator') and 'has-error' or ''} col-lg-6 div_einvoice_operator show-company"
            >
                <t
                    t-set="operators"
                    t-value="request.env['res.partner.operator.einvoice'].sudo().search([])"
                />
                <label
                    class="col-form-label label-optional"
                    for="einvoice_operator"
                >eInvoice Operator</label>
                <select
                    id="einvoice-operator-select"
                    class="form-control einvoice_operator-select select2"
                    name="einvoice_operator"
                >
                    <option />
                    <t t-foreach="operators" t-as="op">
                        <option
                            t-att-value="op.id"
                            t-att-selected="op == ('einvoice_operator' in checkout and checkout['einvoice_operator'])"
                        >
                            <span t-esc="op.name" /> (<span t-esc="op.identifier" />)
                        </option>
                    </t>
                </select>
            </div>
            <div class="clearfix" />
        </xpath>
    </template>

    <template
        id="edicode_notification"
        name="Show edicode notification"
        inherit_id="address"
        customize_show="True"
        active="False"
    >
        <xpath expr="//div[@id='einvoice-operator-div']" position="after">
            <div id="edicode-notification-div" class="col-12" style="display: none;">
                <div
                    class="alert alert-info text-center alert-dismissible fade show"
                    role="alert"
                >
                    <p><strong>Please use edicode when possible!</strong></p>
                    <p>This will allow us to process your order quicker.</p>
                    <button
                        type="button"
                        class="close"
                        data-dismiss="alert"
                        aria-label="Close"
                    >
                        <span>&amp;times;</span>
                    </button>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
