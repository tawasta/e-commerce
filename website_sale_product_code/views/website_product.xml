<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="product" inherit_id="website_sale.product">
        <xpath expr="//h1[@t-field='product.name']" position="after">
            <h2
                class="product_code text-muted"
                t-if="product.website_show_code"
                t-field="product_variant.default_code"
            />
            <script
                type="text/javascript"
                src="/website_sale_product_code/static/src/js/product.js?v101"
            />
        </xpath>
    </template>

</odoo>
