<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_public_category_tree_view" model="ir.ui.view">
        <field name="name">product.public.category.tree.inherit</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="website_sale.product_public_category_tree_view" />
        <field name="arch" type="xml">
            <field name="display_name" position="after">
                <field name="show_as_external_link" />
                <field name="external_link_url" />
            </field>
        </field>
    </record>

    <record id="product_public_category_form_view" model="ir.ui.view">
        <field name="name">product.public.category.form.inherit</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="website_sale.product_public_category_form_view" />
        <field name="arch" type="xml">
            <field name="sequence" position="after">
                <field name="show_as_external_link" widget="boolean_toggle" />
                <field
                    name="external_link_url"
                    attrs="{ 'invisible': [('show_as_external_link', '=', False)]}"
                />
            </field>
        </field>
    </record>
</odoo>
