<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="cart_lines_disable_qty" inherit_id="website_sale.cart_lines">
        <xpath expr="//t[@t-as='line']//tr" position="before">
            <t t-set="disable_cart_change" t-value='1==0' />
        </xpath>
        <xpath expr="//input[@type='text']" position="attributes">
            <attribute
                name="t-att-disabled">'disabled' if disable_cart_change else None</attribute>
        </xpath>
        <xpath expr="//div[@class='input-group-prepend']" position="attributes">
            <attribute
                name="t-att-class"
                separator=" "
                add="'d-none' if disable_cart_change else ''"
            />
        </xpath>
        <xpath expr="//div[@class='input-group-append']" position="attributes">
            <attribute
                name="t-att-class"
                separator=" "
                add="'d-none' if disable_cart_change else ''"
            />
        </xpath>
    </template>
</odoo>
