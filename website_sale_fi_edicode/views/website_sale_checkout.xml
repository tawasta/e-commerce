<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="address" inherit_id="website_sale.address">
        <xpath expr="//div[contains(@t-attf-class, 'div_vat')]" position="after">
            <div id="edicode_div" t-attf-class="form-group #{error.get('edicode') and 'has-error' or ''} col-md-6 div_edicode show-company">
                <label class="control-label label-optional" for="edicode">Edicode</label>
                <input type="text" name="edicode" class="form-control" />
            </div>
            <div id="einvoice_operator_div" t-attf-class="form-group #{error.get('einvoice_operator') and 'has-error' or ''} col-md-6 div_einvoice_operator show-company">
                <t t-set="operators" t-value="request.env['res.partner.operator.einvoice'].sudo().search([])"/>
                <label class="control-label label-optional" for="einvoice_operator">eInvoice Operator</label>
                <select class="form-control einvoice_operator-select" name="einvoice_operator">
                    <option></option>
                    <t t-foreach="operators" t-as="op">
                        <option t-att-value="op.id" t-esc="op.name"/>
                    </t>
                </select>
            </div>
            <div class="clearfix"/>
        </xpath>
    </template>
</odoo>
