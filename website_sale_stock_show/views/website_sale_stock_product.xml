<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template
        id="website_sale_stock_product"
        name="Website product availability"
        inherit_id="website_sale_stock.website_sale_stock_product">

        <xpath
            expr="//div[@class='availability_messages o_not_editable']"
            position="before">
            <t
                t-if="product.type == 'product' and product.inventory_availability == 'never'">
                <div
                    t-attf-class="mt16 #{product_variant.virtual_available > 0 and 'text-success' or 'text-danger'}">
                    <span
                        t-esc="product_variant.virtual_available"
                        t-options='{"widget": "float", "precision": 0}'
                    /> <span t-field="product.uom_id" /> available
                </div>
            </t>
        </xpath>

    </template>

</odoo>
