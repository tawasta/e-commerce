        id="assets_frontend"
        name="Company slider assets"
        inherit_id="website.assets_frontend"
    >

        <xpath expr="//link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/website_sale_company_slider/static/src/scss/style.scss"
            />
        </xpath>

        <xpath expr="script[last()]" position="after">
            <script
                type="text/javascript"
                src="/website_sale_company_slider/static/src/js/checkout.js"
            />
        </xpath>
    </template>
</odoo>
