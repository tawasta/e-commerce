<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template
        id="payment_delivery_methods"
        inherit_id="website_sale_delivery.payment_delivery_methods"
    >
        <xpath
            expr="//span[@t-attf-class='#{badge_class} o_wsale_delivery_badge_price']"
            position="attributes"
        >
            <attribute
                name="t-att-class"
            >'d-none' if (delivery.delivery_type == 'fixed' and delivery.fixed_price &lt;= 0) else badge_class + ' o_wsale_delivery_badge_price'</attribute>
        </xpath>

    </template>


</odoo>
