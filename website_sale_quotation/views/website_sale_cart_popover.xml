<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="cart_popover"
        name="Quotation Popover"
        inherit_id="website_sale.cart_popover"
    >

        <xpath expr="//div[contains(@class, 'alert')][1]" position="replace">
            <div
                t-if="not website_sale_order or not website_sale_order.website_order_line"
                class="alert alert-info"
            >
                Your quotation is empty!
            </div>
        </xpath>

        <xpath expr="//a[@href='/shop/cart']" position="replace">
            <a class="btn btn-primary" href="/shop/cart">
                View Quotation (<t t-esc="website_sale_order.cart_quantity" /> items)
            </a>
        </xpath>
    </template>
</odoo>
