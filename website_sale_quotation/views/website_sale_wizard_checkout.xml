<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="wizard_checkout" name="Wizard Checkout Quotation" inherit_id="website_sale.wizard_checkout">
        <xpath expr="//div[@class='progress-wizard']/a[1]//div[@class='text-center progress-wizard-steplabel']" position="replace">
            <div class="text-center progress-wizard-steplabel">Review Quotation</div>
        </xpath>

        <xpath expr="//div[@class='progress-wizard']/a[3]//div[@class='text-center progress-wizard-steplabel']" position="replace">
            <div class="text-center progress-wizard-steplabel">Confirm Quotation</div>
        </xpath>
    </template>
</odoo>
