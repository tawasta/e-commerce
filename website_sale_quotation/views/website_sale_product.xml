<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product" name="Product Quotation" inherit_id="website_sale.product">
        <xpath expr="//a[@id='add_to_cart']" position="replace">
            <a id="add_to_cart" class="btn btn-primary btn-lg mt8 js_check_product a-submit" href="#">Add to Quotation</a>
        </xpath>
    </template>
    <template id="product_price_remove_price" inherit_id="website_sale.product_price">
        <xpath expr="//div[@class='product_price mt16']" position="replace">
        </xpath>
    </template>
</odoo>
