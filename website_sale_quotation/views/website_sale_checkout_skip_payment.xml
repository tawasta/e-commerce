<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="skip_payment" name="Skip website payment" inherit_id="website_sale_checkout_skip_payment.payment">
        <xpath expr="//div[@id='skip_payment_method']//a/span" position="replace">
            <span>Confirm Quotation <span class="fa fa-chevron-right"/></span>
        </xpath>

        <xpath expr="//a[@href='/shop/cart']" position="replace">
            <a role="button" href="/shop/cart" class="btn btn-secondary">
                <i class="fa fa-chevron-left"/>
                Return to Quotation
            </a>
        </xpath>
    </template>
</odoo>
