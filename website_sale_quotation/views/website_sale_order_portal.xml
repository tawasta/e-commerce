<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="remove_total_div"
        name="Sale order portal remove total div"
        inherit_id="sale.sale_order_portal_content"
    >
        <xpath expr="//div[@id='total']" position="replace">
            <!-- <h1 class="mb32">My Quotation</h1> -->
        </xpath>
        <xpath expr="//thead" position="replace">
            <thead class="bg-100">
                <tr>
                    <t t-set="colspan" t-value="6" />
                    <th class="text-left">Products</th>
                    <th class="text-right">Quantity</th>
                </tr>
            </thead>
        </xpath>
        <xpath expr="//t[@t-foreach='sale_order.order_line']/tr" position="replace">
            <tr
                t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
            >
                <t t-if="not line.display_type">
                    <td id="product_name"><span t-field="line.name" />A</td>
                    <td class="text-right">B
                        <div id="quote_qty">
                            <span t-field="line.product_uom_qty" />
                            <span t-field="line.product_uom" groups="uom.group_uom" />
                        </div>
                    </td>
                </t>
            </tr>
        </xpath>
    </template>

    <template
        id="remove_sidebar_price"
        name="Remove portal sidebar price"
        inherit_id="portal.portal_record_sidebar"
    >
        <xpath
            expr="//div[@class='card-body text-center pb-2 pt-3']"
            position="replace"
        >
        </xpath>
    </template>

    <template
        id="sale_order_portal_template"
        name="Sale Order Portal Template remove download"
        inherit_id="sale.sale_order_portal_template"
    >
        <xpath expr="//t[@t-call='portal.portal_record_sidebar']" position="replace" />
        <!--<xpath expr="//div[@class='o_download_pdf btn-toolbar flex-sm-nowrap']/ancestor::li" position="replace" />-->
    </template>
</odoo>
