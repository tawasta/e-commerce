<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_shipping_settings']" position="after">
                <h2>Billing Addresses in shop</h2>
                <div
                    class="row mt16 o_settings_container"
                    id="website_sale_billing_address_settings"
                >
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        id="website_sale_sibling_addresses_setting"
                    >
                        <div class="o_setting_left_pane">
                            <field name="allow_selecting_sibling_billing_addresses" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="allow_selecting_sibling_billing_addresses" />
                            <div class="text-muted">
                                Let the customer select also from those billing addressed that are not
                                directly linked to the customer but belong to the same parent company.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
