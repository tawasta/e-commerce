<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="address" inherit_id="website_sale.address" name="Show domicile" customize_show="True" active="True">
        <xpath expr="//select[@name='state_id']/.." position="after">
            <div t-attf-class="form-group #{error.get('domicile') and 'o_has_error' or ''} col-md-8 div_domicile">
                <label class="col-form-label label-optional" for="domicile">Domicile</label>
                <input type="text" name="domicile" t-attf-class="form-control #{error.get('domicile') and 'is-invalid' or ''}"
                       t-att-value="'domicile' in checkout and checkout['domicile']"/>
            </div>
        </xpath>
    </template>
</odoo>
