<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Hide Suggested Product Default Code -->
    <template
        id="hide_suggested_product_default_code"
        inherit_id="website_sale.suggested_products_list"
        name="Hide Suggested Product Default Code"
        active="False"
        customize_show="True">
        <xpath
            expr="//strong[@t-esc=&quot;combination_info['display_name']&quot;]"
            position="attributes">
            <attribute name="t-esc">combination_info['name_without_code']</attribute>
        </xpath>
    </template>

    <!-- Product Layout Wider -->
    <template
        id="product_layout_wider"
        inherit_id="website_sale.product"
        name="Product Layout Attributes Wider"
        active="False"
        customize_show="True">
        <xpath expr="//div[@class='col-md-6 col-xl-8']" position="attributes">
            <attribute name="class">col-md-6 col-xl-6</attribute>
        </xpath>
        <xpath expr="//div[@class='col-md-6 col-xl-4']" position="attributes">
            <attribute name="class">col-md-6 col-xl-6</attribute>
        </xpath>
    </template>

    <!-- Add to Cart button primary -->
    <template
        id="suggested_products_list_button_primary"
        inherit_id="website_sale.suggested_products_list"
        name="Suggested Products Add to Cart Button Primary"
        active="False"
        customize_show="True">
        <xpath
            expr="//a[@class='btn btn-link js_add_suggested_products']"
            position="attributes">
            <attribute
                name="class">btn btn-primary btn-custom-cart js_add_suggested_products</attribute>
        </xpath>
    </template>

    <!-- Hide suggested products image -->
    <template
        id="suggested_products_list_hide_image"
        inherit_id="website_sale.suggested_products_list"
        name="Hide Suggested Products Image"
        active="False"
        customize_show="True">
        <xpath
            expr="//tr[@t-foreach='suggested_products']//td[@class='td-product_name']"
            position="attributes">
            <attribute name="style">padding-left:15px;</attribute>
        </xpath>
        <xpath
            expr="//tr[@t-foreach='suggested_products']//td[@class='td-product_name']"
            position="after">
            <td colspan="1" />
        </xpath>
        <xpath expr="//td[@class='td-img text-center']" position="attributes">
            <attribute name="class">td-img text-center d-none</attribute>
        </xpath>
    </template>

    <!-- Hide cart summary product image -->
    <template
        id="cart_summary_hide_image"
        inherit_id="website_sale.cart_summary"
        name="Hide Cart Summary Product Image"
        active="False"
        customize_show="True">
        <xpath expr="//td[@t-if='line.product_id.product_tmpl_id']" position="replace">
            <td colspan="1" class="td-img" />
        </xpath>
    </template>

    <!-- Hide cart lines product image -->
    <template
        id="cart_lines_hide_image"
        inherit_id="website_sale.cart_lines"
        name="Hide Cart Lines Product Image"
        active="False"
        customize_show="True">
        <xpath
            expr="//td[@class='td-img'][@t-if='line.product_id.product_tmpl_id']"
            position="attributes">
            <attribute name="t-if">0</attribute>
        </xpath>
        <xpath
            expr="//td[@class='td-img'][@t-if='not line.product_id.product_tmpl_id']"
            position="attributes">
            <attribute name="t-if">0</attribute>
        </xpath>
        <xpath expr="//td[@class='td-product_name']" position="after">
            <td colspan="1" t-if="line.product_id.product_tmpl_id" />
            <td colspan="2" t-if="not line.product_id.product_tmpl_id" />
        </xpath>
    </template>

    <!-- Street and number to billing address -->
    <template
        id="street_and_number_to_billing_address"
        inherit_id="website_sale.address"
        name="Street and Number to Billing Address"
        active="False"
        customize_show="True">
        <xpath expr="//label[@for='street']" position="replace">
            <label class="col-form-label" for="street">Billing Address</label>
        </xpath>
    </template>
</odoo>
