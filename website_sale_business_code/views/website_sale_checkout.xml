<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="address" inherit_id="website_sale.address" name="Show Business code field" customize_show="True" active="True">
        <xpath expr="//label[@for='name']" position="replace">
            <label class="col-form-label" for="name">Your name</label>
        </xpath>
    </template>

    <template id="address_b2b" inherit_id="website_sale.address_b2b" name="Show Business code field" customize_show="True" active="True">
        <xpath expr="//label[@for='vat']" position="replace">
            <label for="vat" class="col-form-label label-optional">Business code / VAT</label>
        </xpath>
    </template>
</odoo>
